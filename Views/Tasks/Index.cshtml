@model List<TaskItem>

<h1>To-Do List</h1>

<ul>
    @foreach (var task in Model)
    {
        <li>
            @task.Description
            <form asp-action="Delete" asp-route-id="@task.Id" method="post">
                <input type="submit" value="Delete">
            </form>
            <a asp-action="Edit" asp-route-id="@task.Id">Edit</a>
        </li>
    }
</ul>

<a asp-action="Create">Add New Task</a>
